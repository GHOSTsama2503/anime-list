---
import CardImage from "./CardImage.astro";
---

<template id="template">
    <div class="card">
        <a class="image-link"><CardImage /></a>

        <div class="card-content">
            <a class="title-link"><h4 class="card-title clickable"></h4></a>

            <p></p>
        </div>
    </div>
</template>

<style>
    .card {
        display: flex;
        flex-direction: column;
        gap: 0;
        background-color: var(--bg-primary);
        border-radius: 0.5rem;
        overflow: hidden;
        transition: all 0.1s;
    }

    .card a {
        color: var(--text-primary);
        text-decoration: none;
    }

    .card-content {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
        padding: 0.6rem;
        height: 100%;
    }

    .card-title {
        margin: 0;
        font-size: 1.05em;
    }

    .card-content p {
        margin: 0;
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 5;
    }
</style>
