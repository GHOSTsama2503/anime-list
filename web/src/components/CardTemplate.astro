---
import CardImage from "./CardImage.astro";
---

<template id="template">
    <div class="card">
        <CardImage />

        <div class="card-content">
            <h4></h4>

            <p></p>
        </div>
    </div>
</template>

<style>
    .card {
        display: flex;
        flex-direction: column;
        gap: 0;
        background-color: var(--bg-primary);
        border-radius: 0.5rem;
        cursor: pointer;
        overflow: hidden;
        transition: all 0.1s;
    }

    .card:hover {
        opacity: 80%;
    }

    .card-content {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
        padding: 0.6rem;
    }

    .card-content h4 {
        margin: 0;
        font-size: 1.05em;
    }

    .card-content p {
        margin: 0;
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 5;
    }
</style>
